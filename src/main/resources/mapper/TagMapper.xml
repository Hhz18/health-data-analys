<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.healthdata.mappers.TagMapper">
    <insert id="insertTag" parameterType="com.healthdata.entity.Tag">
        INSERT INTO tag (name) VALUES (#{name})
    </insert>
    <delete id="deleteTag" parameterType="long">
        DELETE FROM tag WHERE id = #{id}
    </delete>
    <select id="selectAllTags" resultType="com.healthdata.entity.Tag">
        SELECT id, name FROM tag
    </select>
</mapper>

